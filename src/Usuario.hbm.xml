<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
 <class name="br.com.Triadworks.vraptor.Usuario.Usuario" table="Usuario" >
  <id name="id" type="int" column="id" >
   <generator class="native"/>
  </id>
 
  <property name="login">
   <column name="login" />
  </property>
  <property name="senha">
   <column name="senha"/>
  </property>
 </class>
</hibernate-mapping>